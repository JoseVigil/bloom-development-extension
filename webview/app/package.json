{
  "name": "bloom-development-extension",
  "displayName": "Bloom Development",
  "description": "AI-Powered Development Workspace",
  "version": "2.0.0",
  "type": "module",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bloom.openUI",
        "title": "Bloom: Open UI"
      },
      {
        "command": "bloom.openApiDocs",
        "title": "Bloom: Open API Documentation"
      },
      {
        "command": "bloom.restartServers",
        "title": "Bloom: Restart Servers"
      },
      {
        "command": "bloom.showStatus",
        "title": "Bloom: Show Status"
      },
      {
        "command": "bloom.createNucleus",
        "title": "Bloom: Create Nucleus"
      },
      {
        "command": "bloom.createIntent",
        "title": "Bloom: Create Intent"
      }
    ],
    "configuration": {
      "title": "Bloom",
      "properties": {
        "bloom.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to Python executable for Brain CLI"
        },
        "bloom.apiPort": {
          "type": "number",
          "default": 48215,
          "description": "Port for REST API server"
        },
        "bloom.wsPort": {
          "type": "number",
          "default": 4124,
          "description": "Port for WebSocket server"
        },
        "bloom.uiUrl": {
          "type": "string",
          "default": "http://localhost:5173",
          "description": "URL of Bloom UI"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/swagger": "^8.13.0",
    "@fastify/swagger-ui": "^2.1.0",
    "fastify": "^4.25.2",
    "lucide-svelte": "^0.562.0",
    "uuid": "^9.0.0",
    "ws": "^8.14.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.4"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.49.2",
    "@types/node": "^18.x",
    "@types/uuid": "^9.0.0",
    "@types/vscode": "^1.80.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.40.0",
    "typescript": "^5.0.0",
    "vite": "^6.4.1"
  }
}
