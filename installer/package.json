{
  "name": "bloom-nucleus-installer",
  "version": "1.0.0",
  "description": "Desktop installer for Bloom Nucleus System",
  "main": "electron-app/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "dev:admin": "powershell -ExecutionPolicy Bypass -File ./scripts/run-elevated.ps1",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.bloom.nucleus.installer",
    "productName": "Bloom Nucleus Installer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-app/**/*",
      "native/**/*",
      "vscode-plugin/**/*",
      "chrome-extension/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "electron-app/assets/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "runAfterFinish": true,
      "installerIcon": "electron-app/assets/icon.ico",
      "uninstallerIcon": "electron-app/assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": "dmg",
      "icon": "electron-app/assets/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": "AppImage",
      "icon": "electron-app/assets/icon.png",
      "category": "Development"
    }
  },
  "keywords": [
    "bloom",
    "nucleus",
    "vscode",
    "chrome",
    "extension",
    "installer"
  ],
  "author": "Bloom Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "fs-extra": "^11.2.0"
  }
}