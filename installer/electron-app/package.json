{
  "name": "bloom-nucleus-installer-app",
  "productName": "Bloom Nucleus Installer",
  "version": "1.0.0",
  "description": "Bloom Nucleus Desktop Installer - AI Runtime & Extension Manager",
  "main": "main.js",
  "author": {
    "name": "BTIP Studio",
    "email": "support@btip.studio"
  },
  "license": "MIT",
  "scripts": {
    "// === DESARROLLO ===": "",
    "dev": "run-admin.bat",
    "dev:no-admin": "run-dev.bat",
    "dev:launch": "electron . --mode=launch",
    "electron:dev": "electron .",
    "check-admin": "powershell -ExecutionPolicy Bypass -File check-admin.ps1",
    
    "// === PREPARACIÓN ===": "",
    "prepare:brain": "pip install -r ../../brain/requirements.txt --target ../../brain/libs --upgrade",
    "prepare:runtime": "node ../scripts/setup_runtime.js",
    "prepare:all": "npm run prepare:runtime && npm run prepare:brain",
    
    "// === BUILD ===": "",
    "prebuild": "npm run prepare:all",
    "build": "electron-builder --win --x64",
    "build:dir": "electron-builder --win --x64 --dir",
    "build:portable": "electron-builder --win portable",
    
    "// === FORGE (LEGACY - Si necesitas compatibilidad) ===": "",
    "forge:start": "electron-forge start",
    "forge:package": "npm run prepare:brain && electron-forge package",
    "forge:make": "npm run prepare:brain && electron-forge make",
    
    "// === UTILIDADES ===": "",
    "clean": "rimraf dist release out",
    "clean:all": "npm run clean && rimraf ../resources/runtime ../../brain/libs",
    "lint": "echo 'No linting configured'"
  },
  "build": {
    "appId": "com.bloom.nucleus.installer",
    "productName": "Bloom Nucleus Installer",
    "copyright": "Copyright © 2024 BTIP Studio",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/bloom.ico",
      "requestedExecutionLevel": "requireAdministrator",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "BTIP Studio",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Bloom Nucleus Installer",
      "runAfterFinish": true,
      "installerIcon": "assets/bloom.ico",
      "uninstallerIcon": "assets/bloom.ico",
      "installerHeader": "assets/bloom.ico",
      "installerHeaderIcon": "assets/bloom.ico",
      "license": "LICENSE.txt",
      "perMachine": false,
      "deleteAppDataOnUninstall": false
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "src/**/*",
      "core/**/*",
      "install/**/*",
      "config/**/*",
      "assets/**/*",
      "package.json",
      "!node_modules/**/*",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "../resources/runtime",
        "to": "runtime",
        "filter": ["**/*", "!**/__pycache__", "!**/*.pyc", "!**/.git"]
      },
      {
        "from": "../../brain",
        "to": "brain",
        "filter": ["**/*", "!**/__pycache__", "!**/*.pyc", "!**/.git", "!**/tests"]
      },
      {
        "from": "../native/bin/win32",
        "to": "native",
        "filter": ["**/*"]
      },
      {
        "from": "../native/nssm/win64",
        "to": "nssm",
        "filter": ["**/*"]
      },
      {
        "from": "../chrome-extension/src",
        "to": "extension",
        "filter": ["**/*", "!**/node_modules"]
      }
    ],
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "compression": "maximum",
    "asar": true,
    "asarUnpack": [
      "**/*.node",
      "**/brain/**/*",
      "**/runtime/**/*",
      "**/native/**/*",
      "**/extension/**/*",
      "**/nssm/**/*",
      "assets/**/*",
      "core/**/*",
      "install/**/*",
      "config/**/*",
      "main.js",
      "preload.js",
      "renderer.js"
    ]
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.3.0",
    "@electron-forge/maker-deb": "^7.3.0",
    "@electron-forge/maker-rpm": "^7.3.0",
    "@electron-forge/maker-squirrel": "^7.3.0",
    "@electron-forge/maker-zip": "^7.3.0",
    "@electron-forge/plugin-fuses": "^7.3.0",
    "@electron/fuses": "^1.7.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "rimraf": "^5.0.5"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "assets/bloom.ico",
        "asar": true,
        "extraResource": [
          "../resources/runtime",
          "../../brain",
          "../native/bin/win32",
          "../chrome-extension/src"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "bloom_nucleus_installer",
            "setupIcon": "assets/bloom.ico",
            "loadingGif": "assets/installing.gif"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": ["darwin"]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        {
          "name": "@electron-forge/plugin-fuses",
          "config": {
            "version": "1.7.0",
            "resetAdHocDarwinSignature": true,
            "runAsNode": false
          }
        }
      ]
    }
  }
}