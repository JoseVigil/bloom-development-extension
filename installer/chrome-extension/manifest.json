{
  "manifest_version": 3,
  "name": "Bloom Nucleus Bridge",
  "version": "1.0.0",
  "description": "Native messaging bridge for browser automation",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "nativeMessaging",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}