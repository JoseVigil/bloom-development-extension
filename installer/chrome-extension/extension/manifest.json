{
  "manifest_version": 3,
  "name": "Bloom Nucleus Bridge",
  "version": "1.0.0",
  "description": "Native messaging bridge for browser automation",
  "key": "",
  
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "nativeMessaging",
    "storage",
    "alarms",
    "identity",
    "identity.email",
    "cookies",
    "webNavigation"
  ],
  
  "host_permissions": [
    "<all_urls>",
    "*://*.google.com/*",
    "*://aistudio.google.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "Synapse Discovery"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://aistudio.google.com/app/apikey*"],
      "js": ["content-aistudio.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [{
    "matches": ["<all_urls>"],
    "resources": ["discovery/*", "synapse.config.js"]
  }]
}