{
  "name": "bloom-conductor",
  "productName": "Bloom Nucleus Launcher",
  "version": "1.0.0",
  "description": "Bloom Nucleus Conductor - Post-installation launcher",
  "main": "main_conductor.js",
  "author": {
    "name": "BTIP Studio",
    "email": "support@btip.studio"
  },
  "license": "MIT",
  "scripts": {
    "prebuild": "node ../shared/bump-version.js",
    "build": "electron-builder --win --x64",
    "dev": "electron .",
    "version:bump": "node ../shared/bump-version.js",
    "version:patch": "node ../shared/bump-version.js --patch",
    "version:minor": "node ../shared/bump-version.js --minor",
    "version:major": "node ../shared/bump-version.js --major",
    "version:info": "node -e \"const i=require('./build_info.json'); console.log(i.product_name, i.full_version, '|', i.built_at);\""
  },
  "build": {
    "appId": "com.bloom.nucleus.conductor",
    "productName": "Bloom Nucleus Launcher",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/bloom.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "bloom-conductor.exe"
    },
    "portable": {
      "artifactName": "bloom-conductor.exe"
    },
    "files": [
      "main_conductor.js",
      "preload_conductor.js",
      "src/**/*",
      "assets/**/*",
      "build_info.json",
      "version.json",
      "package.json",
      "bloom-conductor-cli.cmd"
    ],
    "extraFiles": [
      {
        "from": "bloom-conductor-version.ps1",
        "to": "bloom-conductor-version.ps1"
      }
    ],
    "directories": {
      "output": "../../native/bin/win64/conductor",
      "buildResources": "assets"
    },
    "compression": "maximum",
    "asar": true,
    "asarUnpack": [
      "build_info.json"
    ]
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1"
  }
}
