{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "out",
    "rootDir": ".",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["vscode", "mocha", "node"],
    "baseUrl": ".",
    "paths": {
      "@/contracts/*": ["contracts/*"] 
    }
  },
  "include": [
    "src/**/*.ts",
    "contracts/**/*.ts"  
  ],
  "exclude": [
    "node_modules",
    "out",
    "backups/**",
    ".vscode-test",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}