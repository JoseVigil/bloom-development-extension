{
  "name": "bloom-development-extension",
  "displayName": "Bloom Development Extension",
  "description": "Adds a command to open Markdown preview to the side with native VS Code styling and internal link support",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/JoseVigil/bloom-development-extension.git"
  },
  "publisher": "noti",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:bloom.openMarkdownPreview"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bloom.openMarkdownPreview",
        "title": "Bloom: Open Markdown Preview"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "bloom.openMarkdownPreview",
          "group": "navigation",
          "when": "resourceFilename =~ /\\.md$/"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.19.22",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.4.1",
    "typescript": "^5.1.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.40",
    "punycode": "^2.3.1"
  },
  "files": [
    "out",
    "node_modules/@vscode/codicons/dist",
    "src/styles/**"
  ]
}
